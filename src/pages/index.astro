import benni from "../assets/aboutus/benni.png"
import fabi from "../assets/aboutus/fabi.png"
import piera from "../assets/aboutus/piera.png"
import AboutUsCard from "../components/AboutUsCardWrap.astro"
import AboutUsHeaderCard from "../components/AboutUsHeaderCardWrap.astro"
import { MobileHeaderText } from "../components/MobileHeaderText"
import { MobileAboutUsHeader } from "../components/MobileAboutUsHeader"
