---
interface Props {
	image: ImageMetadata;
	fox?: boolean;
}

import imageFox from "../assets/header-fox.png";
const { image, fox } = Astro.props;
---

<div class="outerWrap">
	<div class="wrap">
		<svg height="0" width="0">
			<defs>
				<clipPath id="headerImageClipPath" clipPathUnits="objectBoundingBox">
					<path d="M 1 0 L 0 0 C 0.05 0.4 0.05 0.6 0 1 L 1 1 L 1 0"></path>
				</clipPath>
			</defs>
		</svg>
		<div class="left">
			<img src={image.src} width={image.width} height={image.height} />
		</div>
		<div class="right">
			<slot />
		</div>
	</div>
	{ !fox ? '' : (<img class="fox" src={imageFox.src} width={imageFox.width} height={imageFox.height} alt="Ein Fuchs" />)}
</div>

<style>
	.wrap {
		width: 100%;
		height: 100%;
		position: relative;
		background: var(--nav-background);
		overflow: hidden;
	}

	.outerWrap {
		width: 100%;
		height: calc(min(50vh, 40vw));
		position: relative;
	}

	.left {
		width: 50%;
		height: 100%;
		display: block;
		position: absolute;
		right: 0;
		top: 0;
	}

	.left img {
		object-fit: cover;
		width: 100%;
		height: 100%;
		display: block;
		overflow: hidden;
		clip-path: url(#headerImageClipPath);
	}

	.right {
		width: 50%;
		height: 100%;
		display: block;
		position: absolute;
		left: 0;
		top: 0;
	}

	.right :global(img) {
		display: block;
		height: auto;
		position: absolute;
		left: 50%;
		top: 50%;
		width: 100%;
		height: 100%;
		object-fit:scale-down;
		padding: 4rem;
		box-sizing: border-box;
		transform: translate(-50%, -50%);
	}

	.fox {
		position: absolute;
		z-index: 2;
		left: 50%;
		margin-left: -900px;
		width: 280px;
		height: auto;
		display: block;
		bottom: 0;
		transform: translate(0, 45.5%);
	}

	@media only screen and (max-width: 1750px)  {
		.fox {
			display: none;
		}
	}
</style>
