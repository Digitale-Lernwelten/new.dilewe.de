---
interface Props {
	image: ImageMetadata;
}

const { image } = Astro.props;
---

<div class="wrap">
	<svg height="0" width="0">
		<defs>
			<clipPath id="headerImageClipPath" clipPathUnits="objectBoundingBox">
				<path d="M 0 0 L 0.9 0 C 1 0.3 1 0.7 0.92 1 L 0 1 L 0 0"></path>
			</clipPath>
			<clipPath id="headerImageClipPathRight" clipPathUnits="objectBoundingBox">
				<path d="M 1 0 L 0.1 0 C 0 0.3 0 0.7 0.08 1 L 1 1 L 1 0"></path>
			</clipPath>
		</defs>
	</svg>
	<div class="left">
		<img src={image.src} width={image.width} height={image.height} />
	</div>
	<div class="right">
		<slot />
	</div>
</div>

<style>
	.wrap {
		width: 100%;
		height: 50vh;
		position: relative;
		background: var(--nav-background);
		overflow:hidden;
	}

	.left {
		width: calc(50% + 100px);
		height: 100%;
		display: block;
		position: absolute;
		left: 0;
		top: 0;
		overflow: hidden;
		z-index:1;
		clip-path: url(#headerImageClipPath);
	}

	.left img {
		object-fit: cover;
		width: 100%;
		height: 100%;
		display: block;
		overflow: hidden;
	}

	.right {
		width: calc(50% - 100px);
		height: 100%;
		display: block;
		position: absolute;
		right: 0;
		top: 0;
	}
</style>
