---
interface Props {
	image: ImageMetadata;
	fox?: boolean;
	foxReferences?: boolean;
}

import imageFox from "../assets/header-fox.png";
import imageFoxReferences from "../assets/header-fox-references.png";
const { image, fox, foxReferences } = Astro.props;
---

<div class="outerWrap">
	<div class="wrap">
		<svg height="0" width="0">
			<defs>
				<clipPath id="headerImageClipPath" clipPathUnits="objectBoundingBox">
					<path d="M 1 0 L 0 0 C 0.05 0.4 0.05 0.6 0 1 L 1 1 L 1 0"></path>
				</clipPath>
			</defs>
		</svg>
		<div class="image">
			<img src={image.src} width={image.width} height={image.height} />
		</div>
		<div class="text">
			<slot />
		</div>
	</div>
	{ !fox ? '' : (<img class="fox" src={imageFox.src} width={imageFox.width} height={imageFox.height} alt="Ein Fuchs" />)}
	{ !foxReferences ? '' : (<img class="fox-references" src={imageFoxReferences.src} width={imageFoxReferences.width} height={imageFoxReferences.height} alt="Ein Fuchs" />)}
</div>

<style>
	.wrap {
		width: 100%;
		height: 100%;
		position: relative;
		background: var(--nav-background);
		overflow: hidden;
	}

	.outerWrap {
		width: 100%;
		height: calc(min(50vh, 40vw));
		position: relative;
	}

	.image {
		width: 50%;
		height: 100%;
		display: block;
		position: absolute;
		right: 0;
		top: 0;
		clip-path: url(#headerImageClipPath);
	}

	.image img {
		object-fit: cover;
		width: 100%;
		height: 100%;
		display: block;
		overflow: hidden;
	}

	.text {
		width: 50%;
		height: 100%;
		display: block;
		position: absolute;
		left: 0;
		top: 0;
	}

	.text :global(img) {
		display: block;
		height: auto;
		position: absolute;
		left: 50%;
		top: 50%;
		width: 100%;
		height: 100%;
		object-fit: contain;
		padding: 6rem;
		box-sizing: border-box;
		transform: translate(-50%, -50%);
	}

	.fox {
		position: absolute;
		z-index: 2;
		right: 50%;
		margin-right: -900px;
		width: 280px;
		height: auto;
		display: block;
		bottom: 0;
		z-index:10;
		transform: translate(0, 45.5%);
	}

	@media only screen and (max-width: 1750px)  {
		.fox {
			display: none;
		}
	}

	.fox-references {
		position: absolute;
		z-index: 2;
		left: 50%;
		width: 580px;
		height: auto;
		display: block;
		bottom: 0;
		z-index:10;
	}
</style>
