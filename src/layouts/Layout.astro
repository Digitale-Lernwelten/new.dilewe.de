<style is:global>
	:root {
		--primary: #3DA98F;
		--secondary: #D58337;
		--tertiary: #027AAD;
		--nav-background: var(--primary);
		--nav-text-color: #FBFBFB;
		--content-width: 1200px;
		--content-wide-width: 1600px;
		--content-padding: 32px;
		--text-color: #1E1E1E;
		--background-color: white;
	}
	html, body {
		font-family: Lato, system-ui, sans-serif;
		font-weight: 300;
		background: var(--background-color);
		color: var(--text-color);
		margin: 0;
		padding: 0;
		overflow-x: hidden;
	}

	body.references {
		--primary: #027AAD;
		--nav-background: #616161;
	}
	body.index {
		--primary: #027AAD;
		--nav-background: #616161;
	}

	body.imprint,
	body.privacy {
		--primary: #D58337;
		--secondary: #3DA98F;
		--nav-background: #D58337;
	}

	body.products {
		--primary: #616161;
		--secondary: #d9d9d9;
		--nav-background: #FBFBFB;
		--nav-text-color: #616161;
	}

	* {
		line-height: 1.35em;
	}

	h1,h2,h3,h4,h5,h6,button {
		font-family: Lato, system-ui, sans-serif;
		text-transform: uppercase;
		font-weight: 300;
	}

	p {
		margin:0 0 1em;
	}
</style>
